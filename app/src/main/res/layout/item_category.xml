<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="category"
            type="com.batch.avgleclient.model.AvCategory.Response.Category" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:imageUrl="@{category.coverUrl}"
            android:src="@mipmap/ic_launcher">
        </ImageView>
        <TextView
            android:id="@+id/shortName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{category.shortName}"
            tools:text="shortName">
        </TextView>
        <TextView
            android:id="@+id/totalVideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(category.totalVideos)}"
            tools:text="totalVideos">
        </TextView>
    </LinearLayout>
</layout>