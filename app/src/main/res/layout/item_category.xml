<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="category"
            type="com.batch.avgleclient.model.AvCategory.Response.Category" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:imageUrl="@{category.coverUrl}"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"></ImageView>

            <TextView
                android:id="@+id/shortName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_gravity="bottom"
                android:background="#88000000"
                android:textColor="@color/colorAccent"
                android:text="@{category.shortName}"
                tools:text="shortName"></TextView>

            <TextView
                android:id="@+id/totalVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="bottom|right"
                android:textColor="@color/colorAccent"
                android:text="@{Integer.toString(category.totalVideos)}"
                tools:text="totalVideos"></TextView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>