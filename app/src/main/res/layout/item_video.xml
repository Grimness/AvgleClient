<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="video"
            type="com.batch.avgleclient.model.AvVideo.Response.Videos" />

        <variable
            name="listener"
            type="com.batch.avgleclient.category.CategoryClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:foreground="@drawable/ripple"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:imageUrl="@{video.previewUrl}"
            android:scaleType="center"
            android:src="@drawable/noimage"/>
        <TextView
            android:id="@+id/shortName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@{video.title}"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Video Title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{video.keyword}"
            android:textColor="#FFFFFF"
            android:singleLine="true"
            tools:text="keyword"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:textColor="#FFFFFF"
            android:text="@{Integer.toString(video.viewNumber)+@string/views}"
            tools:text="1000views"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:textColor="#FFFFFF"
            android:text="@{Float.toString(video.duration/60)}"
            tools:text="duration"/>
    </LinearLayout>
</layout>