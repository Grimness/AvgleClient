<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="video"
            type="com.batch.avgleclient.model.AvVideo.Response.Videos" />

        <variable
            name="listener"
            type="com.batch.avgleclient.category.CategoryClickListener" />
        <variable
            name="duration"
            type="String" />
    </data>

    <LinearLayout
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:foreground="@drawable/ripple"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:imageUrl="@{video.previewUrl}"
                android:foreground="@drawable/video_item_shadow"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_play_arrow"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:background="@drawable/rounded_corner_text_view"
                android:layout_gravity="right|bottom"
                android:layout_margin="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="@{duration}"
                tools:text="00:00"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/shortName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@{video.title}"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Video Title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{video.keyword}"
                android:textColor="#e0e0e0"
                android:textSize="12sp"
                android:singleLine="true"
                tools:text="keyword"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e0e0e0"
                android:text="@{Integer.toString(video.viewNumber)+@string/views}"
                android:textSize="12sp"
                tools:text="1000views" />
        </LinearLayout>
    </LinearLayout>
</layout>